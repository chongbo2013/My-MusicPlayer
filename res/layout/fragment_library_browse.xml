<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.lewa.view.MaskEndGridView
        android:id="@id/gv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="40dp"
        android:numColumns="3"
        android:columnWidth="100dp"
        android:scrollbars="none"
        android:verticalSpacing="20dp"
        android:stretchMode="spacingWidth"
        android:gravity="center"
        android:fadingEdge="none"
        android:clipToPadding="false"
        android:listSelector="@android:color/transparent"
        app:gv_header_mask="@drawable/start_mask"
        app:gv_header_mask_height="@dimen/header_mask_height"
        app:gv_footer_mask="@drawable/end_mask"
        app:gv_footer_mask_height="@dimen/footer_mask_height" />

</RelativeLayout>
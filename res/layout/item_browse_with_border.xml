<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/button"
    android:orientation="vertical"
    android:layout_width="100dp"
    android:layout_height="120dp"
    android:gravity="center">

    <com.lewa.view.MaskImage.MaskImageView
        android:id="@id/iv"
        android:layout_width="@dimen/playlist_item_size"
        android:layout_height="@dimen/playlist_item_size"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_cover_shadow_200"
        app:layout_size="@dimen/playlist_cover_in_rect_size" />

    <TextView
        android:id="@id/tv_title"
        style="@style/TextView.Middle.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        android:gravity="center_horizontal|top" />

</LinearLayout>